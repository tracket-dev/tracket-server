enum VotingStatus {
  WIN,
  LOSS,
  IN_PROGRESS
}

type Vote {
  id: ID! @id
  voteType: Boolean
  song: Song @relation(name: "VotedSong", link: INLINE)
  bracket: Bracket @relation(link: INLINE)
  user: User! @relation(name: "VotedUser")
}

type User {
  id: ID! @id
  username: String! @unique
  email: String! @unique
  password: String!
  votes: [Vote!]! @relation(name: "VotedUser", link: INLINE)
  brackets: [Bracket!]! @relation(name: "BracketOwner", link:INLINE)
}


type Song {
  id: ID! @id
  spotifyID: String!
  title: String!
  album: String!
  position: Int!
  votingStatus: VotingStatus!
  votes: [Vote]! @relation(name: "VotedSong")
}

type Bracket {
  id: ID! @id
  user: User! @relation(name: "BracketOwner", link:INLINE)
  songs: [Song!]! @relation(link: INLINE)
  roundTime: Int!
  active: Boolean
  
}



